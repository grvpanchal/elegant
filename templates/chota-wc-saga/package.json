{
  "name": "app-shell",
  "description": "Webcomponent app-shell following open-wc recommendations",
  "license": "MIT",
  "author": "app-shell",
  "version": "0.0.0",
  "type": "module",
  "homepage": "./",
  "scripts": {
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "npm run analyze -- --exclude dist && build-storybook",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@vaadin/vaadin-button": "^2.1.0",
    "@vaadin/vaadin-checkbox": "^2.2.4",
    "@vaadin/vaadin-radio-button": "^1.1.2",
    "@vaadin/vaadin-text-field": "^2.1.3",
    "chota": "^0.9.2",
    "haunted": "^5.0.0",
    "lit": "^2.0.2",
    "nanoid": "^5.0.6",
    "pwa-helpers": "^0.9.1",
    "redux": "^5.0.1",
    "reselect": "^5.1.0",
    "vite": "^5.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@chromatic-com/storybook": "1.6.1",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/eslint-config": "^9.2.1",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@storybook/addon-essentials": "^8.1.11",
    "@storybook/addon-links": "^8.1.11",
    "@storybook/blocks": "^8.1.11",
    "@storybook/test": "^8.1.11",
    "@storybook/web-components": "^8.1.11",
    "@storybook/web-components-vite": "^8.1.11",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-storybook": "^0.5.4",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.14.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-workbox": "^6.2.0",
    "storybook": "^8.1.11"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier",
      "plugin:storybook/recommended"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
